@{
    ViewData["Title"] = "EventRegistrationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model COMP003B.Assignment3.Models.EventRegistration

<!-- Create the form -->
<h2>Create Product</h2>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EventCode"></label>
        <input asp-for="EventCode" class="form-control" />
        <span asp-validation-for="EventCode" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Tickets"></label>
        <input asp-for="Tickets" class="form-control" />
        <span asp-validation-for="Tickets" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ReferralCode"></label>
        <input asp-for="ReferralCode" class="form-control" />
        <span asp-validation-for="ReferralCode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sumbit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}